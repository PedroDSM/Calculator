<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="#000000"
    tools:context=".MainActivity"
    android:layout_alignParentLeft="true">

    <TextView
        android:id="@+id/Etiqueta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/GridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:height="130dp"
        android:gravity="end"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="100dp"/>

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="0dp"
        android:rowCount="6" >

    <Button
        android:id="@+id/Clean"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="C"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:onClick="Clean"
        />
    <Button
        android:id="@+id/Divide"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="/"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:onClick="Division"/>
    <Button
        android:id="@+id/Multiplica"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="x"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:onClick="Multiplicacion"/>

        <Button
            android:id="@+id/Borrar"
            android:layout_width="140dp"
            android:layout_gravity="fill"
            android:layout_margin="3dp"
            android:background="#454141"
            android:text="BORRAR"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:onClick="Borrar"/>

        <Button
        android:id="@+id/Siete"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="7"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:onClick="Siete"
            />
    <Button
        android:id="@+id/Ocho"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="8"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:onClick="Ocho"
        />
    <Button
        android:id="@+id/Nueve"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="9"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:onClick="Nueve"
        />
    <Button
        android:id="@+id/Restar"
        android:layout_width="137dp"
        android:layout_gravity="fill"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="-"
        android:textColor="#FF0000"
        android:textSize="50dp"
        android:onClick="Restar"
        />
    <Button
        android:id="@+id/Cuatro"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="4"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:onClick="Cuatro"
        />
    <Button
        android:id="@+id/Cinco"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="5"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:onClick="Cinco"
        />
    <Button
        android:id="@+id/Seis"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="6"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:onClick="Seis"
        />
    <Button
        android:id="@+id/Sumar"
        android:layout_width="137dp"
        android:layout_gravity="fill"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="+"
        android:textColor="#FF0000"
        android:textSize="50dp"
        android:onClick="Sumar"
        />
    <Button
        android:id="@+id/Uno"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="1"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:onClick="Uno"
        />
    <Button
        android:id="@+id/Dos"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="2"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:onClick="Dos"
        />
    <Button
        android:id="@+id/Tres"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="3"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:onClick="Tres"
        />
    <Button
        android:id="@+id/Igual"
        android:layout_width="70dp"
        android:layout_rowSpan="2"
        android:layout_gravity="fill"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="="
        android:textColor="#FF0000"
        android:textSize="50dp"
        android:onClick="Igual"
        />
    <Button
        android:id="@+id/Cero"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="0"
        android:textColor="#FF0000"
        android:textSize="50dp"
        android:onClick="Cero"
        />
    <Button
        android:id="@+id/Punto"
        android:layout_margin="2dp"
        android:background="#454141"
        android:text="."
        android:enabled="true"
        android:textColor="#FF0000"
        android:textSize="50dp"
        android:onClick="Punto"
        />
</GridLayout>
</RelativeLayout>



